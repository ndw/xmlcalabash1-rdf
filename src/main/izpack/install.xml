<?xml version="1.0" encoding="UTF-8"?>
<installation version="1.0">

   <info>
      <appname>XML Calabash MarkLogic XCC Steps</appname>
      <appversion>{VERSION}</appversion>
      <appsubpath>xmlcalabash1-xcc-{VERSION}</appsubpath>
      <authors>
         <author name="Norman Walsh" email="ndw@nwalsh.com"/>
      </authors>
      <url>http://xmlcalabash.com/</url>
      <javaversion>1.7</javaversion>
   </info>

   <guiprefs width="640" height="480" resizable="no"/>
   <locale>
      <langpack iso3="eng"/>
   </locale>

   <resources>
     <res id="LicencePanel.licence" src="../../LICENSE.md"/>
   </resources>

   <panels>
     <panel classname="HelloPanel"/>
     <panel classname="LicencePanel"/>
     <panel classname="TargetPanel"/>
     <panel classname="PacksPanel"/>
     <panel classname="InstallPanel"/>
     <panel classname="FinishPanel"/>
   </panels>

   <packs>
     <pack name="Base" required="yes">
       <description>The base files</description>
       <fileset dir="." targetdir="$INSTALL_PATH"/>
     </pack>
   </packs>
</installation>
